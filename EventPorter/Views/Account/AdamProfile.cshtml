@model EventPorter.Models.Adam
@{
    ViewBag.Title = "Profile";
}
@section Styles{
    <link href="~/Content/Profile.css" rel="stylesheet" type="text/css" />
}

<h2>Profile</h2>
<div class="container">
    <div class="row profile">
        <div class="col-md-3">
            <div class="profile-sidebar">
                <!-- sidebar for Adam profile pic -->
                <div class="profile-Adampic">
                    <img src="~/Content/images/lil_porter.png" class="img-responsive" alt="">
                </div>
                <!-- sidebar for Adam info -->
                <div class="profile-Adamtitle">
                    <div class="profile-Adamtitle-Adamname">
                        Adam
                    </div>
                </div>

                <!-- buttons -->
                <div class="profile-Adambuttons">
                    <button type="button" class="btn btn-success btn-sm">Invite</button>
                    <button type="button" class="btn btn-danger btn-sm">Message</button>
                </div>
                <!-- menu -->
                <div class="profile-Adammenu">
                    <ul class="nav">
                        <li class="active">
                            @*<span class="glyphicon glyphicon-home profile-Adammenu" id="Overview">Overview</span>*@
                            @*<span class="profile-Adammenu" id="Overview"><i class="glyphicon glyphicon-home"></i>Overview</span>
                                @Html.ActionLink(" Overview", "Profile", "Account", "", new { @class = "glyphicon glyphicon-home profile-Adammenu"})*@
                            @*<button class="btn profile-Adammenu" id="Overview">Overview</button>*@
                            <a class="glyphicon glyphicon-home profile-Adammenu" id="Overview"> Overview</a>
                        </li>
                        <li>
                            @*<span class="glyphicon glyphicon-cog profile-Adammenu" id="Settings">Settings</span>*@
                            @*@Html.ActionLink(" AccountSettings", "Settings", "Account", "", new { @class = "glyphicon glyphicon-cog profile-Adammenu"})*@
                            <a class="glyphicon glyphicon-cog profile-Adammenu" id="Settings"> Settings</a>
                        </li>
                        <li>
                            @*@Html.ActionLink(" Events", "Event", "Event", "", new { @class= "glyphicon glyphicon-ok profile-Adammenu" })*@
                            <a class="glyphicon glyphicon-ok profile-Adammenu" id="Events"> Events</a>
                        </li>
                        <li>
                            @*@Html.ActionLink(" Help", "Help", "Contact", "", new { @class="glyphicon glyphicon-flag profile-Adammenu"})*@
                            <a class="glyphicon glyphicon-flag profile-Adammenu" id="Help"> Help</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-8" id="infoDiv">

        </div>
        @*<div class="col-md-5">
                <div class="profile-content">
                    Upcoming Event cards here
                </div>
            </div>
            <div class="col-md-4">
                <div class="profile-content">
                    Past event cards here/only show these to other users
                </div>
            </div>*@
    </div>
</div>
@section scripts{
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script>
    @*$(function () {
        $('#Overview').on("click", function () {
            $.get('@Url.Action("AdamInfo","Account")', function (data) {
                $("#infoDiv").html(data);
            });
            $('#Settings').on("click"), function () {
                $.get('@Url.Action("Settings","Account")', function (data) {
                    $("#infoDiv").html(data);
                });
            });
    });*@
    $(function () {
        $('#Overview').on("click", function () {
            $.get('@Url.Action("AdamInfo", "Account")', function (data) {
                $("#infoDiv").html(data);
            });
        });
        $('#Settings').on("click", function () {
            $.get('@Url.Action("Settings", "Account")', function (data) {
                $("#infoDiv").html(data);
            });
        });
        $('#Events').on("click", function () {
            $.get('@Url.Action("Event", "Event")', function (data) {
                $("#infoDiv").html(data);
            });
        });
        $('#Help').on("click", function () {
            $.get('@Url.Action("Help", "Account")', function (data) {
                $("#infoDiv").html(data);
            });
        });
    });
    </script>
}
